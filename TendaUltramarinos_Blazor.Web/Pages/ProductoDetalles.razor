@page "/ProductoDetalles/{Id:int}"
@inherits ProductoDetallesBase

@if (Producto == null && ErrorMensaxe == null)
{
    <MostrarSpinner />
}
else if (ErrorMensaxe != null)
{
    <MostrarError ErrorMensaxe="@ErrorMensaxe"></MostrarError>
}
else
{
    <h3 class="mb-5">Producto Detalles</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Producto.ImaxeUrl" />
        </div>
        <div class="col-md-6">
            <h3>@Producto.Nome</h3>
            <p class="mb-4">@Producto.Descripcion</p>
            <p class="mb-4">
                <b>
                    @Producto.Precio.ToString("C")&nbsp;(@Producto.Cantidade articulos en stock)
                </b>
            </p>
            <div>
                <button class="btn btn-success" @onclick="() => (AddToCesta_Click(new CestaItemAnadirDto
                {
                    CestaId = Hardcodeada.CestaId,
                    ProductoId = Producto.Id,
                    Cantidade = 1
                }
                ))">
                    Engadir a Cesta
                </button>
            </div>
        </div>
    </div>
}
