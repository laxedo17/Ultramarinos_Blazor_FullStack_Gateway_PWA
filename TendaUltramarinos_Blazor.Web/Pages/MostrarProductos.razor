@inherits MostrarProductosBase

@foreach (var producto in Productos)
{
    <div class="col-md-3 mb-2">
        <a href="/ProductoDetalles/@producto.Id">
            <div class="card">
                <img class="img-thumbnail" src="@producto.ImaxeUrl" />
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        @producto.Nome
                    </h5>
                    <p class="card-text">
                        <b>@producto.Precio.ToString("C")</b>
                    </p>
                </div>
            </div>
        </a>
    </div>
}
